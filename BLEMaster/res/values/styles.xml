<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="btnStyle2">
        <item name="android:background">@drawable/btn_bg_green</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">7dp</item>
        
    </style>

            <!-- android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_bg_nomal2"
            android:layout_margin="7dp"
            android:layout_weight="1" -->
    <style name="text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text1" parent="@style/text">
        <item name="android:background">@drawable/txt_border_gray</item>
    </style>

    <style name="text2" parent="@style/text">
        <item name="android:background">@drawable/txt_border_red</item>
    </style>

    <style name="text3" parent="@style/text">
        <item name="android:background">@drawable/txt_bg_red</item>
    </style>

    <style name="btn1" parent="@style/text">
        <item name="android:background">@drawable/btn_bg_blue</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="ll_style1">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginLeft">@dimen/main_text_margin</item>
        <item name="android:layout_marginRight">@dimen/main_text_margin</item>
    </style>

    <style name="ll_style2">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">3</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginLeft">@dimen/main_btn_margin</item>
        <item name="android:layout_marginRight">@dimen/main_btn_margin</item>
    </style>
    
    <!-- 整个页面分成5行，也即5组 -->
    <style name="ll_group">
        <item name="android:paddingStart">@dimen/main_group_padding</item>
        <item name="android:paddingEnd">@dimen/main_group_padding</item>
    </style>

</resources>