<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">
	<LinearLayout 
	    android:id="@+id/group_line1"
	    android:layout_width="match_parent"
	    android:layout_height="60dp"
	    android:orientation="horizontal">
	    <View
	        android:clickable="true" 
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="5"
	        android:layout_marginStart="15dp"
	        android:layout_marginEnd="15dp"
	        android:layout_marginTop="10dp"
	        android:layout_marginBottom="10dp"
	        android:background="@drawable/logo_right"/>
	    <View 
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"/>
	    <LinearLayout 
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="4"
	        android:layout_marginTop="10dp"
	        android:layout_marginBottom="5dp"
	        android:layout_marginStart="15dp"
	        android:layout_marginEnd="15dp"
	        android:orientation="vertical">
	        <RelativeLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            >
	            <TextView 
	                android:layout_alignParentStart="true"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="蓝牙连接"/>
	            <View 
	                android:layout_width="15dp"
	                android:layout_height="15dp"
	                android:layout_alignParentEnd="true"
	                android:layout_centerVertical="true"
	                android:background="@drawable/ble_state_connected"/>
	        </RelativeLayout>
	        <Button 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="2dp"
	            android:background="@drawable/txt_border_gray"/>
	    </LinearLayout>
	</LinearLayout>
	<LinearLayout 
	    android:id="@+id/group_line2"
	    android:layout_width="match_parent"
	    android:layout_height="40dp"
	    android:layout_below="@id/group_line1"
	    android:orientation="horizontal">
	    <TextView 
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:gravity="center"
	        android:background="@drawable/txt_border_gray"
	        android:layout_marginStart="15dp"
	        android:layout_marginEnd="10dp"
	        android:text="500 RPM"/>
	    <LinearLayout 
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="2"
	        android:layout_marginStart="10dp"
	        android:layout_marginEnd="15dp"
	        android:orientation="vertical">
	        <SeekBar 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:paddingStart="0dp"
	            android:paddingEnd="0dp"
	            android:minHeight="3dp"
	            android:max="100"
	            android:progress="20"
	            style="@android:style/Widget.DeviceDefault.SeekBar"/>
	        <RelativeLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content">
	            <TextView 
	                android:layout_alignParentStart="true"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="0"/>
	            <TextView 
	                android:layout_alignParentEnd="true"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="100"/>
	            <TextView 
	                android:layout_centerHorizontal="true"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="20"/>
	        </RelativeLayout>
	    </LinearLayout>
	</LinearLayout>
    
    <LinearLayout 
        android:id="@+id/group_line4"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:padding="7.5dp"
        android:orientation="horizontal">
        <Button 
            style="@style/btnStyle2"
            android:text="轨迹1"/>
        <Button 
            style="@style/btnStyle2"
            android:text="轨迹2"/>
        <Button 
            style="@style/btnStyle2"
            android:text="轨迹3"/>
        <Button 
            style="@style/btnStyle2"
            android:text="轨迹4"/>
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/group_line5"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@id/group_line2"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:orientation="horizontal">
        <TextView 
            style="@style/ll_style1"
            android:gravity="center"
            android:layout_weight="1.8"
            android:text="MIN"/>
        <TextView 
            style="@style/ll_style1"
            android:gravity="center"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_weight="2.4"
            android:text="当前位置"/>
        <TextView 
            style="@style/ll_style1"
            android:gravity="center"
            android:layout_weight="1.8"
            android:text="MAX"/>
        <View 
            style="@style/ll_style2"/>
        <View 
            style="@style/ll_style2"/>
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/group_line3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/group_line5"
        android:layout_above="@id/group_line4"
        android:padding="7dp"
        android:columnCount="12">
        <!-- 第1列 -->
        <LinearLayout 
            style="@style/ll_style1">
            <TextView 
                style="@style/text3"
                android:text="-180"/>
            <TextView 
                style="@style/text3"
                android:text="-180"/>
            <TextView 
                style="@style/text3"
                android:text="-180"/>
            <TextView 
                style="@style/text3"
                android:text="-180"/>
            <TextView 
                style="@style/text3"
                android:text="-180"/>
            <TextView 
                style="@style/text3"
                android:text="-180"/>
        </LinearLayout>
        <!-- 第2列 -->
        <LinearLayout 
            style="@style/ll_style1">
            <TextView 
                style="@style/text1"
                android:text="0.0"/>
            <TextView 
                style="@style/text1"
                android:text="0.0"/>
            <TextView 
                style="@style/text1"
                android:text="0.0"/>
            <TextView 
                style="@style/text1"
                android:text="0.0"/>
            <TextView 
                style="@style/text1"
                android:text="0.0"/>
            <TextView 
                style="@style/text1"
                android:text="0.0"/>
        </LinearLayout>
        <!-- 第3列 -->
        <LinearLayout 
            style="@style/ll_style1">
            <TextView 
                style="@style/text3"
                android:text="-180"/>
            <TextView 
                style="@style/text3"
                android:text="-180"/>
            <TextView 
                style="@style/text3"
                android:text="-180"/>
            <TextView 
                style="@style/text3"
                android:text="-180"/>
            <TextView 
                style="@style/text3"
                android:text="-180"/>
            <TextView 
                style="@style/text3"
                android:text="-180"/>
        </LinearLayout>
        <!-- 第4列 -->
        <LinearLayout 
            style="@style/ll_style2">
            <Button 
                style="@style/btn1"
                android:text="J1+"/>
            <Button 
                style="@style/btn1"
                android:text="J1+"/>
            <Button 
                style="@style/btn1"
                android:text="J1+"/>
            <Button 
                style="@style/btn1"
                android:text="J1+"/>
            <Button 
                style="@style/btn1"
                android:text="J1+"/>
            <Button 
                style="@style/btn1"
                android:text="J1+"/>
        </LinearLayout>
        <!-- 第5列 -->
        <LinearLayout 
            style="@style/ll_style2">
            
            <Button 
                style="@style/btn1"
                android:text="J1-"/>
            <Button 
                style="@style/btn1"
                android:text="J1-"/>
            <Button 
                style="@style/btn1"
                android:text="J1-"/>
            <Button 
                style="@style/btn1"
                android:text="J1-"/>
            <Button 
                style="@style/btn1"
                android:text="J1-"/>
            <Button 
                style="@style/btn1"
                android:text="J1-"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
